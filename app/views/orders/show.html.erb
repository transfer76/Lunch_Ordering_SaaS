<table class='table'>
  <thead>
  <tr>
    <th scope="col">Name</th>
    <th scope="col">Price</th>
  </tr>
  </thead>
  <tbody>
    <% @order.items.each do |i|%>
      <tr>
        <td><%= i.name %></td>
        <td><%= i.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
  <%= link_to 'Edit', edit_order_path(@order), class: 'btn btn-success' %>
</div>
<div>
  <%= link_to 'Back', menus_path, class: "btn btn-outline-dark back-btn" %>
</div>
