<%= simple_form_for(menu) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= render partial: 'partials/form_errors', locals: {model: menu} %>

  <div class="form-inputs">
    <%= f.input :date,
                autofocus: true,
                input_html: { autocomplete: "date" }%>
      <%= f.simple_fields_for :items do |i| %>
        <%= render 'item_fields', f: i %>
      <% end %>
  </div>
  <div>
    <%= link_to_add_association 'add task', f, :items, class: 'btn btn-success back-btn', data: { association_insertion_method: :append } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
